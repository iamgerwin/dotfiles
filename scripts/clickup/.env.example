# ClickUp API Configuration
# Copy this file to .env and update with your actual values

# Required: Your ClickUp Personal API Token
# Get your token from: https://app.clickup.com/settings/apps
CLICKUP_TOKEN=pk_YOUR_PERSONAL_API_TOKEN_HERE
# Alternative name (for backward compatibility)
#CLICKUP_API_KEY=pk_YOUR_PERSONAL_API_TOKEN_HERE

# Optional: Base API URL (for testing or custom endpoints)
# Default: https://api.clickup.com/api/v2
CLICKUP_BASE_URL=https://api.clickup.com/api/v2

# Optional: Directory for downloaded attachments
# Default: ./clickup_attachments
CLICKUP_ATTACHMENTS_DIR=./clickup_attachments

# Optional: Default team ID for searches
# Find your team ID using: ./clickup-api.sh get-teams
CLICKUP_TEAM_ID=

# Optional: Default space ID for operations
# Find space IDs using: ./clickup-api.sh get-spaces TEAM_ID
CLICKUP_DEFAULT_SPACE_ID=

# Optional: Default list ID for creating tasks
# Find list IDs using: ./clickup-api.sh get-list LIST_ID
CLICKUP_DEFAULT_LIST_ID=

# API Request Configuration
CLICKUP_TIMEOUT=30                    # Request timeout in seconds
CLICKUP_MAX_RETRIES=3                 # Maximum retry attempts
CLICKUP_RETRY_DELAY=1                 # Base delay for retries (exponential backoff)
CLICKUP_USER_AGENT=ClickUp-API-Client/2.0  # Custom User-Agent header
CLICKUP_PAGE_SIZE=100                 # Pagination size for bulk fetches

# Default Task Values
CLICKUP_DEFAULT_PRIORITY=3            # 1=urgent, 2=high, 3=normal, 4=low
CLICKUP_DEFAULT_STATUS=Open           # Default status for new tasks

# Download Configuration
CLICKUP_DOWNLOAD_TIMEOUT=30           # Download timeout in seconds
CLICKUP_DOWNLOAD_RETRIES=3            # Download retry attempts
CLICKUP_MAX_FILESIZE=5368709120       # Max file size in bytes (5GB)

# Debug and Logging
CLICKUP_DEBUG=false                   # Enable debug output (true/false)